<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <corners android:radius="@dimen/notification_dialog_radius" />
            <gradient
                android:angle="270"
                android:centerColor="@color/notification_center_color"
                android:endColor="@color/notification_end_color"
                android:startColor="@color/notification_start_color" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/notification_bg_border"
        android:left="@dimen/notification_bg_border"
        android:right="@dimen/notification_bg_border"
        android:top="@dimen/notification_bg_border">
        <shape>
            <corners android:radius="@dimen/notification_dialog_radius" />
            <solid android:color="@color/notification_dialog_color" />
        </shape>
    </item>
</layer-list>