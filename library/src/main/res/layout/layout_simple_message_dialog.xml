<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dialog_simple_message_width"
    android:layout_height="@dimen/dialog_simple_message_min_height"
    android:background="@mipmap/ic_dialog_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_title"
        style="@style/GlassDialog.Message.Title.Single"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialog_button_margin_top"
        android:gravity="center" />

    <ViewStub
        android:id="@+id/dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_title"
        android:layout_marginLeft="@dimen/dialog_simple_message_margin"
        android:layout_marginTop="@dimen/dialog_button_margin_top"
        android:layout_marginRight="@dimen/dialog_simple_message_margin"
        android:layout="@layout/item_dialog_content" />

    <LinearLayout
        android:id="@+id/dialog_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/dialog_button_margin_bottom"
        android:gravity="center"
        android:orientation="horizontal">

        <com.rokid.glass.ui.button.GlassButton
            android:id="@+id/confirm_btn"
            style="@style/GlassButton"
            android:layout_width="@dimen/glass_button_width"
            android:layout_height="@dimen/glass_button_height"
            android:text="@string/confirm_text" />

        <com.rokid.glass.ui.button.GlassButton
            android:id="@+id/cancel_btn"
            style="@style/GlassButton"
            android:layout_width="@dimen/glass_button_width"
            android:layout_height="@dimen/glass_button_height"
            android:layout_marginLeft="@dimen/glass_button_margin"
            android:text="@string/cancel_text" />

        <ViewStub
            android:id="@+id/customer_btn"
            android:layout_width="@dimen/glass_button_width"
            android:layout_height="@dimen/glass_button_height"
            android:layout="@layout/item_dialog_button" />
    </LinearLayout>
</RelativeLayout>