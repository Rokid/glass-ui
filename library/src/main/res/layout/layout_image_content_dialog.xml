<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dialog_image_content_width"
    android:layout_height="@dimen/dialog_image_content_height"
    android:background="@mipmap/ic_dialog_bg"
    android:paddingLeft="@dimen/dialog_image_margin"
    android:paddingTop="@dimen/dialog_image_margin"
    android:paddingRight="@dimen/dialog_image_margin">

    <TextView
        android:id="@+id/dialog_title"
        style="@style/GlassDialog.Message.Title.Single"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_toLeftOf="@+id/dialog_notify_img"
        android:gravity="center"
        android:text="关于海南今晚十级台" />

    <ViewStub
        android:id="@+id/dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_title"
        android:layout_marginTop="@dimen/dialog_button_margin_top"
        android:layout_toLeftOf="@+id/dialog_notify_img"
        android:layout="@layout/item_dialog_content" />

    <com.rokid.glass.ui.imageview.RoundCornerImageView
        android:id="@+id/dialog_notify_img"
        android:layout_width="@dimen/dialog_image_small_width"
        android:layout_height="@dimen/dialog_image_small_width"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/dialog_margin_normal"
        android:layout_marginBottom="@dimen/dialog_image_margin"
        android:scaleType="centerCrop"
        app:corner_radius="@dimen/dialog_image_radius" />

    <com.rokid.glass.ui.button.GlassButton
        android:id="@+id/confirm_btn"
        style="@style/GlassButton"
        android:layout_width="@dimen/glass_button_width"
        android:layout_height="@dimen/glass_button_height"
        android:layout_alignParentBottom="true"
        android:text="@string/confirm_text" />

    <com.rokid.glass.ui.button.GlassButton
        android:id="@+id/cancel_btn"
        style="@style/GlassButton"
        android:layout_width="@dimen/glass_button_width"
        android:layout_height="@dimen/glass_button_height"
        android:layout_alignTop="@id/confirm_btn"
        android:layout_marginLeft="@dimen/glass_button_margin"
        android:layout_toRightOf="@id/confirm_btn"
        android:text="@string/cancel_text" />
</RelativeLayout>