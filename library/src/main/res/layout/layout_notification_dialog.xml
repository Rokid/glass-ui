<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/notification_dialog_width"
    android:layout_height="@dimen/notification_dialog_height"
    android:layout_marginTop="@dimen/dialog_margin_top"
    android:layout_marginBottom="@dimen/dialog_margin_top"
    android:background="@drawable/notification_dialog_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/notification_dialog_padding"
    android:paddingRight="@dimen/notification_dialog_padding">

    <ImageView
        android:id="@+id/dialog_notification_icon"
        android:layout_width="@dimen/notification_dialog_icon"
        android:layout_height="@dimen/notification_dialog_icon"
        android:layout_marginRight="@dimen/dialog_margin_normal"
        android:src="@mipmap/ic_message" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_notification_title"
            style="@style/GlassDialog.Notification.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/dialog_notification_message"
            style="@style/GlassDialog.Notification.Message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
