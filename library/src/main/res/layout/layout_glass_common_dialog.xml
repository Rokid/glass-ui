<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/glass_dialog_margin_top"
        android:textColor="@color/common_primary_color"
        android:textSize="@dimen/glass_text_size" />

    <TextView
        android:id="@+id/dialog_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/glass_dialog_margin"
        android:gravity="center"
        android:textColor="@color/common_second_color"
        android:textSize="@dimen/glass_small_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/glass_dialog_margin"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <com.rokid.glass.ui.button.GlassButton
            android:id="@+id/dialog_confirm"
            style="@style/RokidGlass.Button"
            android:layout_width="@dimen/glass_dialog_width"
            android:layout_height="@dimen/glass_dialog_height"
            android:text="@string/confirm_text" />

        <com.rokid.glass.ui.button.GlassButton
            android:id="@+id/dialog_cancel"
            style="@style/RokidGlass.Button"
            android:layout_width="@dimen/glass_dialog_width"
            android:layout_height="@dimen/glass_dialog_height"
            android:text="@string/cancel_text" />
    </LinearLayout>
</LinearLayout>