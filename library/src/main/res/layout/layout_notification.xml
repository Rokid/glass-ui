<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/glass_notification_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/notification_padding_left"
    android:paddingTop="@dimen/notification_padding_top"
    android:paddingRight="@dimen/notification_padding_left"
    android:paddingBottom="@dimen/notification_padding_top">

    <TextView
        android:id="@+id/notification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/glass_ui_white"
        android:textSize="@dimen/glass_dialog_message_text_size" />

    <TextView
        android:id="@+id/notification_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/glassColorPrimary"
        android:textSize="@dimen/glass_dialog_message_text_size" />
</LinearLayout>