<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@mipmap/ic_dialog_bg"
    android:paddingLeft="@dimen/glass_dialog_margin_left"
    android:paddingTop="@dimen/glass_dialog_margin_medium"
    android:paddingRight="@dimen/glass_dialog_margin_left"
    android:paddingBottom="@dimen/glass_dialog_margin_medium">

    <LinearLayout
        android:id="@+id/dialog_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/glass_dialog_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_title">

        <ImageView
            android:id="@+id/dialog_tip_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/glass_dialog_margin_small"
            android:src="@mipmap/ic_call" />

        <TextView
            android:id="@+id/dialog_tip_content"
            style="@style/Text.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/glass_dialog_margin_medium"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_tip">

        <com.rokid.glass.ui.button.GlassButton
            android:id="@+id/confirm_btn"
            style="@style/RokidGlass.Button"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/glass_button_height"
            android:gravity="center">

            <requestFocus />
        </com.rokid.glass.ui.button.GlassButton>

        <com.rokid.glass.ui.button.GlassButton
            android:id="@+id/cancel_btn"
            style="@style/RokidGlass.Button"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/glass_button_height"
            android:gravity="center" />
    </LinearLayout>

    <TextView
        android:id="@+id/dialog_title"
        style="@style/Text.MediumLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>