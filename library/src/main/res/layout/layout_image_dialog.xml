<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dialog_image_layout_width"
    android:layout_height="@dimen/dialog_image_layout_height"
    android:background="@mipmap/ic_dialog_bg"
    android:orientation="horizontal"
    android:padding="@dimen/dialog_image_margin">

    <FrameLayout
        android:layout_width="@dimen/dialog_image_width"
        android:layout_height="@dimen/dialog_image_width">

        <com.rokid.glass.ui.imageview.RoundCornerImageView
            android:id="@+id/dialog_notify_img"
            android:layout_width="@dimen/dialog_image_width"
            android:layout_height="@dimen/dialog_image_width"
            android:scaleType="centerCrop"
            app:corner_radius="@dimen/dialog_image_radius"
            app:mask_color="@color/glass_dialog_image_mask_color" />

        <TextView
            android:id="@+id/dialog_title"
            style="@style/GlassDialog.Message.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dialog_image_margin"
            android:gravity="center" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|right"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="@dimen/glass_button_width"
            android:layout_height="@dimen/glass_button_height">

            <com.rokid.glass.ui.button.GlassButton
                android:id="@+id/confirm_btn"
                style="@style/GlassButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/confirm_text" />

            <LinearLayout
                android:id="@+id/voice_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" />
        </RelativeLayout>

        <com.rokid.glass.ui.button.GlassButton
            android:id="@+id/cancel_btn"
            style="@style/GlassButton"
            android:layout_width="@dimen/glass_button_width"
            android:layout_height="@dimen/glass_button_height"
            android:layout_marginTop="@dimen/glass_button_margin"
            android:text="@string/cancel_text" />
    </LinearLayout>
</LinearLayout>